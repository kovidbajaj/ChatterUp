<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Email OTP Verification</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="css/styles.css">
</head>
<body>
  <div class="main-container">
    <div class="left-panel">
      <h1>ChatterUp</h1>
      <p>Verify your email address to continue using ChatterUp!</p>
    </div>

    <div class="right-panel">
      <form action="/verifyOtp" method="post">
        <div class="otp-card text-center">
          <h4>Verify Your Email</h4>
          <p class="text-muted">We have sent an OTP to <strong><%=userEmail%></strong></p>

          <div class="d-flex justify-content-center mb-4">
            <input type="text" maxlength="1" class="otp-input" name="firstDigit" required />
            <input type="text" maxlength="1" class="otp-input" name="secondDigit" required />
            <input type="text" maxlength="1" class="otp-input" name="thirdDigit" required />
            <input type="text" maxlength="1" class="otp-input" name="fourthDigit" required />
          </div>

          <button class="btn btn-primary w-100" type="submit">Verify OTP</button>

          <p class="mt-3 mb-0 text-muted">
            Didn't receive the code? <a href="/resend-otp" class="text-decoration-none">Resend</a>
          </p>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Automatically move to next input
    const inputs = document.querySelectorAll('.otp-input');
    inputs.forEach((input, index) => {
      input.addEventListener('keyup', (e) => {
        if (e.key >= 0 && e.key <= 9) {
          if (index < inputs.length - 1) inputs[index + 1].focus();
        } else if (e.key === 'Backspace' && index > 0) {
          inputs[index - 1].focus();
        }
      });
    });
  </script>
</body>
</html>
